<?xml version="1.0" encoding="UTF-8" ?>
<sj:loggers xmlns:sj="http://sj-http-server.googlecode.com/logger">
    <sj:logger name="sj-server-logger" level="DEBUG">
        <sj:appenders>
            <sj:appender type="console"/>
            <sj:appender type="file">
                <sj:appenderParam name="filename">logs/sjserver.log</sj:appenderParam>
            </sj:appender>
        </sj:appenders>
    </sj:logger>

    <sj:logger name="sj-req-proc-thread-logger" level="TRACE">
        <sj:appenders>
            <sj:appender type="console"/>
            <sj:appender type="file">
                <sj:appenderParam name="filename">logs/sjserver.log</sj:appenderParam>
            </sj:appender>
        </sj:appenders>
    </sj:logger>

    <sj:logger name="sj-fortune-teller-logger" level="DEBUG">
        <sj:appenders>
            <sj:appender type="console"/>
            <sj:appender type="file">
                <sj:appenderParam name="filename">logs/sjserver-ft.log</sj:appenderParam>
            </sj:appender>
        </sj:appenders>
    </sj:logger>
</sj:loggers>
